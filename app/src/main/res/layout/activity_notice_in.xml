<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".Notice.NoticeInActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="80dp"
        android:background="@color/purple_500">
        <TextView
            android:id="@+id/noticeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用电警告"
            android:textSize="@dimen/large_font_size"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/my_other_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="警告时间:"
                    android:textSize="@dimen/common_font_size"/>
                <TextView
                    android:id="@+id/noticeTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/common_font_size" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/purple_200"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="警告类型:"
                    android:textSize="@dimen/common_font_size"/>
                <TextView
                    android:id="@+id/noticeType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/common_font_size" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/purple_200"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="详细报警信息:"
                    android:textColor="@color/brown"
                    android:textSize="@dimen/common_font_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/grey"
                    android:layout_marginStart="5dp"
                    android:text="电器报警/电压超负荷"
                    android:textSize="@dimen/small_font_size" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="@color/purple_200"/>
            <Switch
                android:id="@+id/noticeSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_200"
                android:layout_gravity="right"
                android:padding="10dp"
                android:text="未受理"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="80dp"
        app:srcCompat="@drawable/warning"/>


</LinearLayout>